package com.knorex.model;

public class VehicleSpace {
	
	private int spaceNumber;
	private boolean  availability;
	private String vechileType;
	private Vehicle parkedVehicle;
	public int getSpaceNumber() {
		return spaceNumber;
	}
	public void setSpaceNumber(int spaceNumber) {
		this.spaceNumber = spaceNumber;
	}
	public boolean isAvailblity() {
		return  availability;
	}
	public void setAvailblity(boolean  availability) {
		this. availability = availability;
	}
	public String getVechleType() {
		return vechileType;
	}
	public void setVechleType(String vechleType) {
		this.vechileType = vechleType;
	}
	public Vehicle getParkedVehicle() {
		return parkedVehicle;
	}
	public void setParkedVehicle(Vehicle parkedVehicle) {
		this.parkedVehicle = parkedVehicle;
	}
	public VehicleSpace() {
		super();
		// TODO Auto-generated constructor stub
	}
	@Override
	public String toString() {
		return "VehicleSpace [spaceNumber=" + spaceNumber + ",  availability=" + availability + ", vechleType=" + vechileType
				+ ", parkedVehicle=" + parkedVehicle + "]";
	}
	
	public void parkVehicle(Vehicle vehicle) {
        this.parkedVehicle = vehicle;
        this. availability = false;
    }

    public void removeVehicle() {
        this.parkedVehicle = null;
        this. availability = true;
    }

}
